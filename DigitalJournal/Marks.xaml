<Page x:Class="Change.Marks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Change"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Marks">

    <Grid>
        <DataGrid x:Name="grid" Loaded="Grid_Loaded" Margin="0,20,0,0"/>
        <Button x:Name="dropbtn" Click="Drop_Click" Content="drop" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="75"/>
        <Button x:Name="changebtn" Click="Change_Click" Content="Change" HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Bottom" Width="75"/>
        <Button x:Name="savebtn" Click="Save_Click" Content="save" HorizontalAlignment="Left" Margin="200,0,0,0" VerticalAlignment="Bottom" Width="75"/>
        <Button x:Name="addbtn" Click="Add_Click" Content="add" HorizontalAlignment="Left" Margin="300,0,0,0" VerticalAlignment="Bottom" Width="75"/>
    </Grid>
</Page>
